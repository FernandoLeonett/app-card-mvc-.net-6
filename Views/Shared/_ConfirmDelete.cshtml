@model Card

<div>
    ¿Está seguro que desea eliminar la tarjeta "@Html.LabelFor(m => m.Title)"?
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    @using (Html.BeginForm("Delete", "Card", FormMethod.Post, new { id = "delete-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <button id="confirm-delete-btn" type="submit" class="btn btn-danger">Confirmar</button>
    }
</div>



